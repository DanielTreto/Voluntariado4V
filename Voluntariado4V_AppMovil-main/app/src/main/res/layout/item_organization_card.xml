<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <View
            android:id="@+id/borderTopSpacer"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_business"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/borderTopSpacer" />

        <TextView
            android:id="@+id/tvOrgName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:text="Future Horizons NGO"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintEnd_toStartOf="@+id/btnOrgMoreOptions"
            app:layout_constraintStart_toEndOf="@+id/imgLogo"
            app:layout_constraintTop_toTopOf="@+id/imgLogo" />

        <TextView
            android:id="@+id/tvOrgDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description of the organization goes here..."
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="@+id/tvOrgName"
            app:layout_constraintEnd_toEndOf="@+id/tvOrgName"
            app:layout_constraintTop_toBottomOf="@+id/tvOrgName" />

        <ImageView
            android:id="@+id/btnOrgMoreOptions"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add"
            android:padding="4dp"
            app:tint="@color/text_secondary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgLogo" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="16dp"
            android:background="@color/icon_gray"
            android:alpha="0.2"
            app:layout_constraintTop_toBottomOf="@+id/imgLogo" />

        <LinearLayout
            android:id="@+id/infoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider">

            <TextView
                android:id="@+id/chipOrgStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#E8F5E9"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Active"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvOrgEmailInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@example.com"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_email" 
                app:drawableTint="@color/text_secondary"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvOrgPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+34 666 777 888"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_phone" 
                app:drawableTint="@color/text_secondary"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/tvOrgVolunteersCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="5 Voluntariados"
                android:textSize="13sp"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                app:drawableStartCompat="@drawable/ic_event_note" 
                app:drawableTint="@color/text_secondary"
                android:textColor="@color/text_secondary"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionsOrgLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoContainer">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="#F44336"
                app:cornerRadius="4dp"
                android:text="✕ Denegar"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="#4CAF50"
                app:cornerRadius="4dp"
                android:text="✓ Aceptar"
                android:textSize="12sp" />
        </LinearLayout>
        
        <!-- Bottom Blue Border -->
        <View
            android:id="@+id/bottomBorder"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/actionsOrgLayout"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>