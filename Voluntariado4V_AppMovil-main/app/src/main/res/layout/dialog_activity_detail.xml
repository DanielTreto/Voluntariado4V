<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/modal_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/imgDetailHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                app:tint="@android:color/white"
                android:background="#80000000"
                android:padding="4dp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título Actividad"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/modal_text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                
                <TextView
                     android:id="@+id/tvDetailStatus"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Status"
                     android:padding="4dp"
                     android:background="#E0E0E0"
                     android:textColor="#000000"
                     android:textStyle="bold"
                     android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDetailDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Fecha: 25/05/2025"
                android:drawableStart="@drawable/ic_date_range"
                android:drawablePadding="8dp"
                app:drawableTint="@color/modal_text_primary"
                android:gravity="center_vertical"
                android:textColor="@color/modal_text_secondary"/>

            <TextView
                android:id="@+id/tvDetailLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ubicación: Centro"
                android:drawableStart="@drawable/ic_location_on" 
                android:drawablePadding="8dp"
                app:drawableTint="@color/modal_text_primary"
                android:gravity="center_vertical"
                android:textColor="@color/modal_text_secondary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo: "
                    android:drawableStart="@drawable/ic_info_outline"
                    android:drawablePadding="8dp"
                    app:drawableTint="@color/modal_text_primary"
                    android:gravity="center_vertical"
                    android:textColor="@color/modal_text_primary"/>

                <TextView
                    android:id="@+id/tvDetailType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Medio Ambiente"
                    android:background="@color/white"
                    android:textColor="@color/category_text_color"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Organizado por:"
                android:textStyle="bold"
                android:textColor="@color/modal_text_primary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:background="@color/org_bg_color"
                android:padding="8dp">
                
                <ImageView
                    android:id="@+id/imgOrgAvatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_profile_placeholder"
                    android:scaleType="centerCrop"/>
                    
                <TextView
                     android:id="@+id/tvOrgName"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginStart="12dp"
                     android:text="Nombre Org"
                     android:textStyle="bold"
                     android:textColor="@color/modal_text_primary"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDetailMaxVolunteers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Máximo Voluntarios: 10"
                android:textStyle="italic"
                android:textColor="@color/modal_text_secondary"/>

            <TextView
                android:id="@+id/tvOdsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ODS Que Practica:"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textSize="18sp"
                android:textColor="@color/modal_text_primary"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/layoutOdsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone">
                <!-- Items added dynamically or simple text -->
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textSize="18sp"
                android:textColor="@color/modal_text_primary"/>

            <TextView
                android:id="@+id/tvDetailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Descripción larga de la actividad..."
                android:lineSpacingExtra="4dp"
                android:textColor="@color/modal_text_secondary"/>

            <TextView
                android:id="@+id/tvVolunteersTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Voluntarios Apuntados"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textSize="18sp"
                android:textColor="@color/modal_text_primary"/>

            <LinearLayout
                android:id="@+id/layoutVolunteersList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp">
                <!-- Items added dynamically -->
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
