<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dashboard Alumno"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etSearchStudentDash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_card_outline"
        android:drawableStart="@drawable/ic_search"
        android:drawableTint="@color/text_secondary"
        android:drawablePadding="12dp"
        android:hint="Buscar actividades..."
        android:padding="12dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary" />

    <HorizontalScrollView
        android:id="@+id/filterScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSortActivities"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Orden: A-Z"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnFilterStatus"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Estado"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnFilterType"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Tipo"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnFilterODS"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="ODS"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnFilterCapacity"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Plazas"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>
    </HorizontalScrollView>

        <!-- SECCIÓN 1: Mis Actividades -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mis Actividades"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_blue_border"
            android:padding="8dp"
            android:gravity="center_vertical"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMyActivities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="visible"
            tools:listitem="@layout/item_activity_card"
            tools:itemCount="1"/>

        <LinearLayout
            android:id="@+id/emptyMyActivities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="24dp"
            android:layout_marginBottom="16dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_event_note"
                app:tint="@color/text_secondary"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No estás inscrito en ninguna actividad"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>

        <!-- SECCIÓN 2: Actividades Disponibles -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Actividades Disponibles"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_blue_border"
            android:padding="8dp"
            android:gravity="center_vertical"/>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAvailableActivities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            tools:listitem="@layout/item_activity_card"/>

        <LinearLayout
            android:id="@+id/emptyAvailableActivities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="24dp">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_assignment"
                app:tint="@color/text_secondary"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay actividades disponibles"
                android:textColor="@color/text_secondary"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
