<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_card_outline"
        android:drawableStart="@drawable/ic_search"
        android:drawableTint="@color/text_secondary"
        android:drawablePadding="12dp"
        android:hint="Buscar voluntarios..."
        android:padding="12dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="@color/text_primary"
        android:textColorHint="@color/text_secondary" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSortVolunteers"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Orden: A-Z"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnFilterStatus"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Estado"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>


            <Button
                android:id="@+id/btnFilterCourse"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Curso"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <!-- Additional filters -->
            <Button
                android:id="@+id/btnFilterPreferences"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Preferencias"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnFilterAvailability"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Disponibilidad"
                android:textSize="12sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/text_secondary">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pendientes" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrados" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerVolunteers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:scrollbars="vertical" />

    <LinearLayout
        android:id="@+id/emptyVolunteers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_people" 
            app:tint="@color/text_secondary"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No hay voluntarios para mostrar"
            android:textSize="16sp"
            android:textColor="@color/text_secondary"/>
    </LinearLayout>

</LinearLayout>