<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Activity Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSimpleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título de Actividad"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvSimpleDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción corta de la actividad..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">
                
                <!-- Status Chip (Rectangular) -->
                 <TextView
                    android:id="@+id/tvSimpleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activo"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:background="#E8F5E9"
                    android:textColor="#4CAF50"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <!-- Type (Rectangular) -->
                <TextView
                    android:id="@+id/tvSimpleType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginEnd="8dp"/>

                <!-- Date with Icon -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_date_range"
                        app:tint="@color/text_secondary"
                        android:layout_marginEnd="4dp"/>
                        
                    <TextView
                        android:id="@+id/tvSimpleDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01/01/25"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Right Arrow Button -->
        <ImageButton
            android:id="@+id/btnOpenDetail"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_chevron_right"
            android:background="@android:color/transparent"
            app:tint="@color/text_secondary"
            android:scaleType="center"
            android:contentDescription="Ver detalles" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
