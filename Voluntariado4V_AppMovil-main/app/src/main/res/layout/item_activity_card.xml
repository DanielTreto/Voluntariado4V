<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <ImageView
                android:id="@+id/imgActivityHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medio Ambiente"
                android:background="@color/white"
                android:textColor="@color/category_text_color"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_gravity="top|start"
                android:layout_margin="12dp"
                android:elevation="2dp" />



        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/tvActTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Limpieza de Playa"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <!-- Status Tag (Moved) -->
                <TextView
                    android:id="@+id/tvStatusTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:background="@drawable/bg_status_chip_pending"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvActDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jornada de limpieza..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"
                android:maxLines="2"
                android:ellipsize="end" />

           <!-- Info Row: Location & Date -->
            <!-- Location Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location_on" 
                    app:tint="@color/icon_gray"/>

                <TextView
                    android:id="@+id/tvActLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Playa de la Concha"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>



            <!-- Date Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_date_range"
                    app:tint="@color/icon_gray"/>

                <TextView
                    android:id="@+id/tvActDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05/12/25 10:00"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voluntarios apuntados:"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:id="@+id/llVolunteersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">
                
                <TextView
                     android:id="@+id/tvNoVolunteers"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Sin voluntarios"
                     android:textSize="12sp"
                     android:textColor="@color/text_secondary"
                     android:visibility="gone"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgVol1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_profile_placeholder"
                    android:layout_marginEnd="-8dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageStyle"
                    android:visibility="gone"/> <!-- Negative margin for overlap effect -->
                    
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgVol2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_profile_placeholder"
                    android:layout_marginEnd="8dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImageStyle"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvVolCountPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+5"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutButtonsActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnViewDetails"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Ver detalles"
                android:textColor="@color/colorPrimary"
                app:strokeColor="@color/colorPrimary"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutButtonsPending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:visibility="gone">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✓ Aceptar"
                android:backgroundTint="#2E7D32"
                android:layout_marginEnd="8dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="✕ Denegar"
                android:backgroundTint="#D32F2F"/>
        </LinearLayout>
        
        <!-- Bottom Blue Border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorPrimary" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>