<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/modal_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/imgDetailHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                app:tint="@android:color/white"
                android:background="#80000000"
                android:padding="4dp"/>

            <ImageView
                android:id="@+id/btnCloseStack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_back" 
                android:layout_gravity="top|end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="64dp"
                app:tint="@android:color/white"
                android:background="#80000000"
                android:padding="4dp"
                android:visibility="gone"/>
        </FrameLayout>
        
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/layoutDetailContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre Organización"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/modal_text_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                     android:id="@+id/tvDetailStatus"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Activo"
                     android:padding="4dp"
                     android:background="#E8F5E9"
                     android:textColor="#4CAF50"
                     android:textStyle="bold"
                     android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDetailEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="email@example.com"
                android:drawableStart="@android:drawable/ic_dialog_email"
                android:drawablePadding="8dp"
                app:drawableTint="@color/modal_text_primary"
                android:gravity="center_vertical"
                android:textColor="@color/modal_text_secondary"/>

            <TextView
                android:id="@+id/tvDetailPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="+34 600 000 000"
                android:drawableStart="@android:drawable/ic_menu_call"
                android:drawablePadding="8dp"
                app:drawableTint="@color/modal_text_primary"
                android:gravity="center_vertical"
                android:textColor="@color/modal_text_secondary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="16dp">
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo"
                        android:textStyle="bold"
                        android:textColor="@color/modal_text_primary"/>
                    <TextView
                        android:id="@+id/tvDetailType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ONG"
                        android:textColor="@color/modal_text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sector"
                        android:textStyle="bold"
                        android:textColor="@color/modal_text_primary"/>
                    <TextView
                        android:id="@+id/tvDetailSector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Social"
                        android:textColor="@color/modal_text_secondary"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ámbito"
                        android:textStyle="bold"
                        android:textColor="@color/modal_text_primary"/>
                    <TextView
                        android:id="@+id/tvDetailScope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Local"
                        android:textColor="@color/modal_text_secondary"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Persona Contacto"
                        android:textStyle="bold"
                        android:textColor="@color/modal_text_primary"/>
                    <TextView
                        android:id="@+id/tvDetailContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre Apellido"
                        android:textColor="@color/modal_text_secondary"/>
                </LinearLayout>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textSize="18sp"
                android:textColor="@color/modal_text_primary"/>

            <TextView
                android:id="@+id/tvDetailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Sin descripción disponible."
                android:lineSpacingExtra="4dp"
                android:textColor="@color/modal_text_secondary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Actividades Organizadas"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textSize="18sp"
                android:textColor="@color/modal_text_primary"/>
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerOrgActivities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
